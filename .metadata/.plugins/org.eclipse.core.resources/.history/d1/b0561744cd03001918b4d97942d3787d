package udp;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.SocketException;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;

public class UDPClient {

	public static void main(String args[]) {

		try {
			DatagramSocket socketUDP = new DatagramSocket();
			InetAddress serverHost = InetAddress.getByName(args[0]);
			int serverPort = 6789;

			// JSONObject msg = new JSONObject();
			// msg.put("type","get");
			// msg.put("id","1");
			// msg.put("msg","holis");

			// System.out.println(msg);
			// System.out.println("Length: " + msg.toString().length());

			DatagramPacket peticion = new DatagramPacket(msg.toString().getBytes(), msg.toString().length(), serverHost,
					serverPort);

			socketUDP.send(peticion);

			byte[] bufer = new byte[1000];
			DatagramPacket respuesta = new DatagramPacket(bufer, bufer.length);
			socketUDP.receive(respuesta);

			// System.out.println("Respuesta: " + new
			// String(respuesta.getData()));

			byte[] data = new byte[respuesta.getLength()];
			System.arraycopy(respuesta.getData(), respuesta.getOffset(), data, 0, respuesta.getLength());
			String responseMsg = new String(data);

			JSONParser parser = new JSONParser();
			JSONObject jsonMsg = (JSONObject) parser.parse(responseMsg);

			// System.out.println("Response: " + new
			// String(response.getData()));
			System.out.println("Response: " + jsonMsg);

			socketUDP.close();

		} catch (SocketException e) {
			System.out.println("Socket: " + e.getMessage());
		} catch (IOException e) {
			System.out.println("IO: " + e.getMessage());
		} catch (ParseException e) {
			System.out.println("PE: " + e.getMessage());
		}
	}
}
